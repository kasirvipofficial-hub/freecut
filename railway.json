{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "server/Dockerfile",
    "watchPatterns": [
      "server/**",
      "src/lib/remotion/**",
      "src/types/**",
      "package.json"
    ]
  },
  "deploy": {
    "startCommand": "npm run server",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
